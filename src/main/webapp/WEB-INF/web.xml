<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
    <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>WEB-INF/classes/log4j.properties</param-value>
  </context-param>
    <context-param>
    <param-name>log4jRefreshInterval</param-name>
    <param-value>60000</param-value>
  </context-param>
<!--   	验证码servlet -->
	<servlet>
		<servlet-name>verifyCodeServlet</servlet-name>
		<servlet-class>top.linjt.java_learning.verifyCode.servlet.VerifyCodeCreateServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>verifyCodeServlet</servlet-name>
		<url-pattern>/authImage/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>upload</servlet-name>
		<servlet-class>top.linjt.java_learning.upload.servlet.FileUploadServlet</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>upload</servlet-name>
		<url-pattern>/upload/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>refreshByServlet</servlet-name>
		<servlet-class>top.linjt.java_learning.servletRefresh.RefreshServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>refreshByServlet</servlet-name>
		<url-pattern>/refresh/*</url-pattern>
	</servlet-mapping>
<!-- 	spring -->
	<servlet>
		<servlet-name>spring</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				classpath*:conf/spring*.xml,
<!-- 				classpath*:spring-cache.xml -->
			</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>spring</servlet-name>
		<url-pattern>/</url-pattern>
<!-- 		如果/* 会报错  因为会匹配到*.jsp 找不到对应的controller   -->
	</servlet-mapping>
</web-app>